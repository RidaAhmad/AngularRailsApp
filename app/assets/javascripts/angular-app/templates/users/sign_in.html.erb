<welcome-directive></welcome-directive>
<div ng-controller='LoginController as LoginCtrl'>
  <div>
    <h1>Sign In</h1>
    <hr/>
    <form name='form' ng-submit='LoginCtrl.Login()'>
      <label name='email'>Enter User Email: </label>
      <input type='email' id='email' ng-model='LoginCtrl.user.email' required>
      <br/>
      <label name='password'>Enter Password: </label>
      <input type='password' id='password' ng-model='LoginCtrl.user.password' required>
      <br/>
      <input type='submit' value='Sign In' class='btn btn-info'>
    </form>
  </div>
  <hr/>
</div>
